<Window x:Class="IT008.Q13_Project___fromScratch.ChooseDeck_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT008.Q13_Project___fromScratch"
        mc:Ignorable="d"
        Title="Choose Deck" Height="350" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2c2c2c">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Filter -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Filter: " FontSize="16" Foreground="White" Margin="0,0,10,0"/>
            <Border CornerRadius="6" Background="#434343" BorderBrush="#FF367FF4" BorderThickness="1">
                <TextBox Width="490" 
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                     Height="17"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"/>
            </Border>
        </StackPanel>
        <!-- Danh sách Deck -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredDecks}"
                 SelectedItem="{Binding SelectedDeck}"
                 Background="#333"
                 Foreground="White"
                 BorderBrush="#444"/>
        <!-- Choose / Add / Cancel / Help -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Border CornerRadius="6" Background="#434343" BorderBrush="#FF367FF4" Width="80" BorderThickness="1">
                <Button Content="Choose" Command="{Binding ChooseCommand}" Width="80" 
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="White"/>
            </Border>
            <Border CornerRadius="6" Background="#434343" Width="80" BorderThickness="1" Margin="5,0">
                <Button Content="Add" Command="{Binding AddCommand}" Width="80" 
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="White"/>
            </Border>
            <Border CornerRadius="6" Background="#434343" Width="80" BorderThickness="1" Margin="5,0">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="White"/>
            </Border>
            <Border CornerRadius="6" Background="#434343" Width="80" BorderThickness="1" Margin="5,0">
                <Button Content="Help" Command="{Binding HelpCommand}" Width="80"
                        Background="Transparent" BorderThickness="0" Cursor="Hand" Foreground="White"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
