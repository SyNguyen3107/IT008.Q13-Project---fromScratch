<Window x:Class="IT008.Q13_Project___fromScratch.CreateDeck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT008.Q13_Project___fromScratch"
        mc:Ignorable="d"
        x:Name="ThisWindow"
        Title="Create Deck" Height="150" Width="400"
        ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen"
        Background="#2c2c2c">
    <Grid>
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">

                    <TextBlock Text="New deck name:" Foreground="White" FontSize="14"/>
                    <Border CornerRadius="6" BorderBrush="#FF367FF4" BorderThickness="1" Background="#242424" Width="368" Margin="0,10,0,10">
                        <TextBox Grid.Row="1" 
                         FontSize="14"
                         Foreground="White"
                         Background="Transparent"
                         Padding="10,6"
                         BorderThickness="0"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                </StackPanel>
                <!-- Nút OK/Cancel -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5">
                    <Border CornerRadius="6" BorderBrush="#FF367FF4" Background="#434343" BorderThickness="1" Height="20"
                            Margin="0,0,5,5">
                        <Button Content="OK" Foreground="White"
                            Background="Transparent"
                            Margin="0,-1,0,-1"
                            Width="57"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding SaveCommand}"
                            CommandParameter="{Binding ElementName=ThisWindow}"/>
                    </Border>
                    <Border CornerRadius="6" Background="#434343" BorderThickness="1" Height="20"
                            Margin="0,0,5,5">
                        <Button Content="Cancel" Foreground="White" 
                            Background="Transparent"
                            Margin="10,-1,10,-1"
                            BorderThickness="0"
                            Width="60"
                            Cursor="Hand"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding ElementName=ThisWindow}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>