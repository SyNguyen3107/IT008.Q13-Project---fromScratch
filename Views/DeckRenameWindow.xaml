<Window x:Class="EasyFlips.Views.DeckRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFlips.Views"
        mc:Ignorable="d"
        x:Name="ThisWindow"
        Title="Rename" Height="180" Width="400" 
        ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen"
        Background="#2c2c2c">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="New name:" Foreground="White" FontSize="14" Margin="0,0,0,10"/>

        <!-- Ô nhập tên mới -->
        <Border Grid.Row="1" CornerRadius="6" BorderBrush="#FF367FF4" BorderThickness="1" Background="#242424" Height="35">
            <TextBox x:Name="NewNameTextBox"
                     FontSize="14"
                     Foreground="White"
                     Background="Transparent"
                     Padding="5"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <!-- Nút OK/Cancel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Border CornerRadius="6" BorderBrush="#FF367FF4" Background="#434343" BorderThickness="1" Margin="0,0,10,0">
                <Button Content="OK" Foreground="White"
                        Background="Transparent"
                        Width="60" Height="25"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding RenameCommand}"
                        CommandParameter="{Binding ElementName=ThisWindow}"/>
            </Border>

            <Border CornerRadius="6" Background="#434343" BorderThickness="1">
                <Button Content="Cancel" Foreground="White" 
                        Background="Transparent"
                        Width="70" Height="25"
                        BorderThickness="0"
                        Cursor="Hand"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding ElementName=ThisWindow}"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>