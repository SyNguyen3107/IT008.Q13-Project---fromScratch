<Window x:Class="EasyFlips.Views.HostLeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cv="clr-namespace:EasyFlips.Converters"
        Title="Leaderboard" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#1B1D21">

    <Window.Resources>
        <cv:NullToCollapsedConverter x:Key="NullToCollapsed"/>
        <cv:ImagePathConverter x:Key="ImgConv"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="FINAL RESULTS" FontSize="20" FontWeight="Black" 
                   Foreground="#F59E0B" HorizontalAlignment="Center" Margin="0,20">
            <TextBlock.Effect>
                <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>

        <Grid Grid.Row="1" Margin="50, 10, 50, 10" Height="350" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="10,0" 
                        Visibility="{Binding SecondPlace, Converter={StaticResource NullToCollapsed}}">
                <Ellipse Width="90" Height="90" Stroke="#C0C0C0" StrokeThickness="4">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding SecondPlace.AvatarUrl, Converter={StaticResource ImgConv}}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding SecondPlace.Name}" Foreground="White" FontWeight="Bold" 
                           FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding SecondPlace.Score}" Foreground="#C0C0C0" FontSize="20" 
                           FontWeight="Bold" HorizontalAlignment="Center"/>

                <Border Height="80" Background="#20C0C0C0" CornerRadius="10,10,0,0" Margin="20,10,20,0">
                    <TextBlock Text="2nd" FontSize="60" FontWeight="Black" Foreground="#80C0C0C0" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0" VerticalAlignment="Bottom"
                        Visibility="{Binding FirstPlace, Converter={StaticResource NullToCollapsed}}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Ellipse Width="130" Height="130" Stroke="#FFD700" StrokeThickness="6">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding FirstPlace.AvatarUrl, Converter={StaticResource ImgConv}}"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="25" ShadowDepth="0"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Grid>

                <TextBlock Text="{Binding FirstPlace.Name}" Foreground="White" FontWeight="Bold" 
                           FontSize="20" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                <TextBlock Text="{Binding FirstPlace.Score}" Foreground="#FFD700" FontSize="30" 
                           FontWeight="ExtraBold" HorizontalAlignment="Center"/>

                <Border Height="100" Background="#30FFD700" CornerRadius="15,15,0,0" Margin="10,10,10,0">
                    <TextBlock Text="1st" FontSize="80" FontWeight="Black" Foreground="#80FFD700" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="10,0"
                        Visibility="{Binding ThirdPlace, Converter={StaticResource NullToCollapsed}}">
                <Ellipse Width="90" Height="90" Stroke="#CD7F32" StrokeThickness="4">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding ThirdPlace.AvatarUrl, Converter={StaticResource ImgConv}}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding ThirdPlace.Name}" Foreground="White" FontWeight="Bold" 
                           FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding ThirdPlace.Score}" Foreground="#CD7F32" FontSize="22" 
                           FontWeight="Bold" HorizontalAlignment="Center"/>

                <Border Height="60" Background="#20CD7F32" CornerRadius="10,10,0,0" Margin="20,10,20,0">
                    <TextBlock Text="3rd" FontSize="60" FontWeight="Black" Foreground="#80CD7F32" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="#25282C" CornerRadius="20,20,0,0" Margin="40,0,40,0" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding RestOfPlayers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Rank}" FontSize="20" FontWeight="Bold" 
                                           Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <Ellipse Grid.Column="1" Width="45" Height="45" Margin="15,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding AvatarUrl, Converter={StaticResource ImgConv}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <TextBlock Grid.Column="2" Text="{Binding Name}" Foreground="White" 
                                           FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="3" Text="{Binding Score}" Foreground="#F59E0B" 
                                           FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="SAVE" Click="OnSaveImageClick" Width="140" Height="30" Margin="10" 
                    Background="#34495E" Foreground="White" FontWeight="Bold"/>

            <Button Content="NEW GAME" Command="{Binding PlayNewGameCommand}" Width="140" Height="30" Margin="10" 
                    Background="#27AE60" Foreground="White" FontWeight="Bold"/>

            <Button Content="CLOSE ROOM" Command="{Binding CloseRoomCommand}" Width="140" Height="30" Margin="10" 
                    Background="#C0392B" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>