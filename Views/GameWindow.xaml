<Window x:Class="EasyFlips.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:EasyFlips.ViewModels"
        xmlns:cv="clr-namespace:EasyFlips.Converters" 
        mc:Ignorable="d"
        Title="EasyFlips Game" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Foreground="White">

    <Window.Resources>
        <cv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <cv:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <cv:DiffTypeToBrushConverter x:Key="DiffTypeToBrushConverter"/>
        <cv:DiffTypeToFontWeightConverter x:Key="DiffTypeToFontWeightConverter"/>
        <cv:DiffTypeToTextDecorationConverter x:Key="DiffTypeToTextDecorationConverter"/>
        <cv:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVis"/>

        <Style x:Key="AnswerTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubmitButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#11998e" Offset="0"/>
                        <GradientStop Color="#38ef7d" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bdr" Property="Background" Value="#7F8C8D"/>
                                <Setter TargetName="bdr" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LockAfterSubmitStyle" TargetType="TextBox" BasedOn="{StaticResource AnswerTextBoxStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnswerSubmitted}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LockBtnAfterSubmitStyle" TargetType="Button" BasedOn="{StaticResource SubmitButtonStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAnswerSubmitted}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Content" Value="WAITING..."/>
                    <Setter Property="Background" Value="#BDC3C7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HostActionButtonStyle" TargetType="Button" BasedOn="{StaticResource SubmitButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF9966" Offset="0"/>
                        <GradientStop Color="#FF5E62" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#141E30" Offset="0.0"/>
            <GradientStop Color="#243B55" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="GlassProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="10"/>
            <Setter Property="Foreground" Value="#FF5E57"/>
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5"/>
                            <Border x:Name="PART_Track" CornerRadius="5"/>
                            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="5" HorizontalAlignment="Left">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF5E57" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidePlayerCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#10FFFFFF"/>
            <Setter Property="BorderBrush" Value="#20FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="QuitButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="8" Padding="15,8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#EB3349" Offset="0"/>
                                    <GradientStop Color="#F45C43" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#EB3349" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StudentOnlyStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHost}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HostOnlyStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHost}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource MainBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#20000000" BorderBrush="#20FFFFFF" BorderThickness="0,0,1,0">
            <Grid Margin="15,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="LEADERBOARD" Foreground="#7F8FA6" FontSize="12" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Players.Count}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text=" Players" FontSize="14" Foreground="#BDC3C7" VerticalAlignment="Bottom" Margin="5,0,0,4"/>
                    </StackPanel>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl ItemsSource="{Binding Players}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource SidePlayerCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Width="45" Height="45" Stroke="#30FFFFFF" StrokeThickness="2">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarUrl, TargetNullValue='/Images/default_user.png'}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                            <TextBlock FontSize="12" Foreground="#F1C40F" Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Player"/>
                                                        <Setter Property="Foreground" Value="#BDC3C7"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHost}" Value="True">
                                                                <Setter Property="Text" Value="HOST 👑"/>
                                                                <Setter Property="Foreground" Value="#F1C40F"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>

                                        <Border Grid.Column="2" VerticalAlignment="Center" Background="#20F59E0B" CornerRadius="5" Padding="8,4">
                                            <TextBlock Text="{Binding Score}" FontSize="14" FontWeight="Bold" Foreground="#F59E0B"/>
                                        </Border>
                                    </Grid>

                                    <i:Interaction.Behaviors>
                                        <i:FluidMoveBehavior AppliesTo="Self" Duration="0:0:0.5">
                                            <i:FluidMoveBehavior.EaseY>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </i:FluidMoveBehavior.EaseY>
                                        </i:FluidMoveBehavior>
                                    </i:Interaction.Behaviors>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="30,25,30,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="QUESTION" Foreground="#7F8FA6" FontSize="11" FontWeight="Bold" />
                    <TextBlock Text="{Binding CurrentQuestionInfo}" FontSize="24" FontWeight="ExtraBold" Foreground="White">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000" BlurRadius="10" Opacity="0.5" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Width="280">
                    <Border Background="#20FFFFFF" CornerRadius="25" Padding="30,5" BorderBrush="#30FFFFFF" BorderThickness="1" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⏳" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TimePerRound}" FontSize="32" FontWeight="Black" Foreground="#FF5E57" Width="50" TextAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FF5E57" BlurRadius="15" Opacity="0.4" ShadowDepth="0"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <ProgressBar Margin="0,10,0,0"
                                 Style="{StaticResource GlassProgressBarStyle}"
                                 Value="{Binding TimePerRound}" 
                                 Maximum="{Binding TotalTimePerRound, FallbackValue=30}"/>
                </StackPanel>

                <Button Grid.Column="2" Command="{Binding QuitGameCommand}" Content="QUIT GAME" HorizontalAlignment="Right"
                        Style="{StaticResource QuitButtonStyle}" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
            </Grid>

            <Grid Grid.Row="1" Margin="30,10,30,30">
                <Border x:Name="CardBorder" Background="White" CornerRadius="20" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="8" BlurRadius="25"/>
                    </Border.Effect>

                    <Grid>
                        <Grid Margin="30">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCardFlipped}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Grid.Row="0" Source="{Binding CurrentCard.FrontImagePath}" 
                                       Stretch="Uniform" MaxHeight="250" Margin="0,0,0,15"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="100">
                                    <TextBlock Text="{Binding CurrentCard.FrontText}" d:Text="This is the question" 
                                               TextWrapping="Wrap" TextAlignment="Center" 
                                               FontSize="24" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                </ScrollViewer>
                            </Grid>

                            <StackPanel Grid.Row="1">
                                <Button Content="REVEAL ANSWER 👁"
                                        Command="{Binding FlipCardCommand}"
                                        Style="{StaticResource HostActionButtonStyle}"
                                        Width="200" Height="50" Margin="0,0,0,10"
                                        Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}"/>

                                <StackPanel Style="{StaticResource StudentOnlyStyle}">
                                    <TextBlock Text="TYPE YOUR ANSWER" 
                                               FontSize="12" Foreground="#3c3c3c" FontWeight="Bold" 
                                               Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" 
                                                 Text="{Binding UserAnswer, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource LockAfterSubmitStyle}"
                                                 VerticalAlignment="Center">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding SubmitAnswerCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <Button Grid.Column="1" Command="{Binding SubmitAnswerCommand}"
                                                Content="CHECK" 
                                                Style="{StaticResource LockBtnAfterSubmitStyle}"
                                                Width="100" Height="50" Margin="15,0,0,0"/>
                                    </Grid>

                                    <TextBlock Text="Đã nộp bài! Đang chờ Host..." Foreground="#27AE60" 
                                               HorizontalAlignment="Center" Margin="0,10,0,0"
                                               Visibility="{Binding IsAnswerSubmitted, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid x:Name="BackSide">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCardFlipped}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Border Background="#E1F5FE" CornerRadius="15" Opacity="0.3" Margin="-30"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                    <ItemsControl ItemsSource="{Binding ComparisonPieces}" HorizontalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Text}"
                                                           Foreground="{Binding Type, Converter={StaticResource DiffTypeToBrushConverter}}"
                                                           FontWeight="{Binding Type, Converter={StaticResource DiffTypeToFontWeightConverter}}"
                                                           TextDecorations="{Binding Type, Converter={StaticResource DiffTypeToTextDecorationConverter}}"
                                                           FontSize="24" Margin="1,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                        <TextBlock Text="Score: " Foreground="Gray" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Score}" Foreground="Red" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
                                        <TextBlock Text="Correct Answer: " Foreground="Gray" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding CorrectAnswer}" Foreground="#81C784" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding CurrentCard.BackText}" 
                                               FontSize="28" FontWeight="Bold" Foreground="#2980B9"
                                               TextWrapping="Wrap" TextAlignment="Center"
                                               MaxWidth="600" Margin="0,0,0,20"/>

                                    <Image Source="{Binding CurrentCard.BackImagePath}" 
                                           MaxHeight="300" MaxWidth="600" Stretch="Uniform"
                                           Margin="0,0,0,10"
                                           Visibility="{Binding CurrentCard.BackImagePath, Converter={StaticResource NullToCollapsedConverter}}"/>

                                    <Button Command="{Binding PlayAudioCommand}" CommandParameter="{Binding CurrentCard.BackAudioPath}"
                                            Visibility="{Binding CurrentCard.BackAudioPath, Converter={StaticResource NullToCollapsedConverter}}"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="🔊 Play audio" Foreground="White" FontSize="16"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Command="{Binding NextCardCommand}" Content="NEXT QUESTION ➜"
                                            Margin="0,20,0,0" Width="200" Height="45"
                                            Style="{StaticResource HostActionButtonStyle}"
                                            Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}"/>

                                    <TextBlock Text="Waiting for Host..." 
                                               Style="{StaticResource StudentOnlyStyle}"
                                               Foreground="#7F8C8D" FontStyle="Italic" 
                                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>