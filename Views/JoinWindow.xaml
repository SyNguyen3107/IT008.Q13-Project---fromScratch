<Window x:Class="EasyFlips.Views.JoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:EasyFlips.Services"
        Title="Join a Class" Height="580" Width="1000"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="40" BorderThickness="1.5" BorderBrush="#33FFFFFF" ClipToBounds="True">
        <Border.Background>
            <SolidColorBrush Color="#0F1115"/>
        </Border.Background>

        <Grid>
            <Grid IsHitTestVisible="False">
                <Ellipse Width="600" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-200,-200,0,0" Fill="{StaticResource Brush.Primary}" Opacity="0.12">
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="600" Height="600" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-200,-200" Fill="{StaticResource Brush.Accent1}" Opacity="0.12">
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid Margin="60,50,60,50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="10,0,0,40">
                    <TextBlock Text="SELECTION" FontSize="11" FontWeight="Bold" Foreground="#66FFFFFF">
                        <TextBlock.RenderTransform>
                            <ScaleTransform ScaleX="1.5"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="CHOOSE ROLE" FontSize="42" FontWeight="Black" Foreground="White" Margin="0,5,0,0"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="0,0,20,20" CornerRadius="35" BorderThickness="1.5" Background="#1FFFFFFF" ClipToBounds="True">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#88FFFFFF" Offset="0"/>
                                <GradientStop Color="#11FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <Grid>
                            <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-15,40">
                                <Ellipse Width="220" Height="220" Fill="{StaticResource Brush.Primary}" Opacity="0.3">
                                    <Ellipse.Effect>
                                        <BlurEffect Radius="120"/>
                                    </Ellipse.Effect>
                                </Ellipse>

                                <Image Source="pack://application:,,,/Resources/teacher.png"
                                   Width="230" Height="230" 
                                   Stretch="Uniform" 
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Effect>
                                        <DropShadowEffect BlurRadius="80" 
                              ShadowDepth="0" 
                              Opacity="0.6" 
                              Color="{Binding Color, Source={StaticResource Brush.Primary}}"/>
                                    </Image.Effect>
                                </Image>
                            </Grid>

                            <Grid Margin="40">
                                <StackPanel VerticalAlignment="Center">
                                    <Border Background="{StaticResource Brush.Primary}" HorizontalAlignment="Left" Padding="12,4" CornerRadius="8" Margin="0,0,0,15">
                                        <TextBlock Text="HOST MODE" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                    <TextBlock Text="TEACHER" FontSize="36" FontWeight="Black" Foreground="White"/>
                                    <TextBlock Text="Host sessions and manage&#x0a;students in real-time." 
                                               Foreground="#AAFFFFFF" TextWrapping="Wrap" Margin="0,10,0,40" FontSize="16" LineHeight="24"/>

                                    <Button Content="CREATE ROOM" Command="{Binding OpenCreateRoomWindowCommand}" 
                                            Height="55" Width="170" HorizontalAlignment="Left"
                                            Background="{StaticResource Brush.Primary}" Foreground="White" FontWeight="Bold" Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="15">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="btnBorder" Property="Opacity" Value="0.8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Margin="10,40,-20,-10" CornerRadius="35" Background="#F21B1D23" BorderThickness="1.2" BorderBrush="{StaticResource Brush.Accent1}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="40" ShadowDepth="10" Opacity="0.4"/>
                        </Border.Effect>
                        <Grid Margin="35">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="STUDENT" FontSize="22" FontWeight="Bold" Foreground="{StaticResource Brush.Accent1}"/>
                                <TextBlock Text="Enter access code" Foreground="#66FFFFFF" Margin="0,5,0,25"/>

                                <TextBox Text="{Binding RoomIdInput, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="50" Background="#121418" Foreground="White" BorderBrush="#33FFFFFF"
                                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18"
                                         services:WatermarkService.Watermark="Enter code here"
                                         services:WatermarkService.WatermarkSize="16">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="12">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="10,0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>

                                <Button Content="JOIN NOW" Command="{Binding JoinRoomCommand}" 
                                        Margin="0,20,0,0" Height="50" Background="{StaticResource Brush.Accent1}" Foreground="White" FontWeight="Bold" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="btnBorder" Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <Button Content="✕" Command="{Binding CloseWindowCommand}" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30" 
                    Foreground="#44FFFFFF" Background="Transparent" BorderThickness="0" Cursor="Hand" FontSize="20"/>
        </Grid>
    </Border>
</Window>