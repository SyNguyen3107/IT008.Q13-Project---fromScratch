<Window x:Class="EasyFlips.Views.JoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tham gia lớp học" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2c2c2c">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="DÀNH CHO GIÁO VIÊN" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Tạo Phòng Học Mới"
                    Command="{Binding OpenCreateRoomWindowCommand}"
                    Width="200" Height="50"
                    Background="#3498DB" Foreground="White" FontWeight="Bold" FontSize="16"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="Thiết lập bài học và mời học sinh tham gia" 
                       Foreground="#777" FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <Border Grid.Column="1" Background="#444" Margin="0,50"/>

        <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="DÀNH CHO HỌC SINH" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox Text="{Binding RoomIdInput, UpdateSourceTrigger=PropertyChanged}"
                     Width="200" Height="40"
                     FontSize="18" FontWeight="Bold"
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                     Background="#444" Foreground="White" BorderThickness="0"
                     Tag="Nhập mã phòng...">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Content="Vào Lớp Ngay"
                    Command="{Binding JoinRoomCommand}"
                    Width="200" Height="40" Margin="0,15,0,0"
                    Background="#27AE60" Foreground="White" FontWeight="Bold"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>