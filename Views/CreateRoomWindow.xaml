<Window x:Class="EasyFlips.Views.CreateRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Setup" Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="RepeatButtonTransparent" TargetType="RepeatButton">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="TickPlacement" Value="None"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.Primary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" x:Name="TrackBackground" Background="#2C2F33" CornerRadius="4" 
                                    Height="8" VerticalAlignment="Center"/>
                            <Track Grid.Row="1" x:Name="PART_Track" VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource RepeatButtonTransparent}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Focusable="False" Width="22" Height="22">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse Fill="{StaticResource Brush.Primary}" Width="22" Height="22" 
                                                             Stroke="White" StrokeThickness="2">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="{StaticResource Color.Primary}" 
                                                                              BlurRadius="15" Opacity="0.7" ShadowDepth="0"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Inter V"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1C1F"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="25"/>
        </Style>

        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12">
                                            <Grid>
                                                <ContentPresenter Margin="15,0"/>
                                                <Path x:Name="Arrow" HorizontalAlignment="Right" VerticalAlignment="Center"
                                                      Margin="0,0,15,0" Data="M 0 0 L 5 5 L 10 0 Z" Fill="#66FFFFFF"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="15,0,35,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="#0F1115" BorderBrush="{StaticResource Brush.Primary}" BorderThickness="1.5" 
                                        CornerRadius="12" Margin="0,5,0,0" Padding="5"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="{StaticResource Color.Primary}" BlurRadius="20" Opacity="0.5" ShadowDepth="0"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" BorderThickness="1.5" BorderBrush="#33FFFFFF" ClipToBounds="True">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1B1D21" Offset="0.0"/>
                <GradientStop Color="#2C2F33" Offset="0.6"/>
                <GradientStop Color="#1B1D21" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Background Gradient Effects -->
            <Grid IsHitTestVisible="False">
                <Ellipse Width="400" Height="400" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-150,-150,0" 
                         Fill="{StaticResource Brush.Primary}" Opacity="0.15">
                    <Ellipse.Effect>
                        <BlurEffect Radius="100"/>
                    </Ellipse.Effect>
                </Ellipse>
                <Ellipse Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-100,0,0,-100" 
                         Fill="{StaticResource Brush.Accent2}" Opacity="0.12">
                    <Ellipse.Effect>
                        <BlurEffect Radius="80"/>
                    </Ellipse.Effect>
                </Ellipse>
            </Grid>

            <Grid Margin="40,40,40,35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,35">
                    <Border Background="{StaticResource Brush.Primary}" HorizontalAlignment="Left" 
                            Padding="14,6" CornerRadius="8" Margin="0,0,0,15">
                        <TextBlock Text="SETUP" FontSize="11" FontWeight="Bold" Foreground="White" FontFamily="Inter V"/>
                    </Border>
                    <TextBlock Text="Room Configuration" FontSize="36" FontWeight="Black" 
                               Foreground="White" FontFamily="Poppins" LineHeight="42"/>
                    <TextBlock Text="Configure your game settings" 
                               Foreground="#66FFFFFF" FontSize="15" Margin="0,8,0,0" FontFamily="Inter V"/>
                </StackPanel>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,-10,0">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Border Background="#1A1C1F" CornerRadius="4" Margin="0,0,5,0"/>
                                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="8">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate>
                                                                <Border Background="{StaticResource Brush.Primary}" CornerRadius="4" Margin="0,0,5,0">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect Color="{StaticResource Color.Primary}" BlurRadius="8" Opacity="0.4" ShadowDepth="0"/>
                                                                    </Border.Effect>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel Margin="0,0,15,0">
                        <!-- Deck Selection Card -->
                        <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Select Deck" Style="{StaticResource LabelStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailableDecks}" 
                                          SelectedItem="{Binding SelectedDeck}"
                                          DisplayMemberPath="Name"
                                          Height="50" FontSize="15" Padding="15,0"
                                          Background="#0F1115" Foreground="White" BorderBrush="#33FFFFFF" BorderThickness="1"
                                          FontFamily="Inter V"
                                          Style="{StaticResource CustomComboBoxStyle}">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="#0F1115"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="15,10"/>
                                            <Setter Property="FontFamily" Value="Inter V"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBoxItem">
                                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                                                Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="2">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsHighlighted" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Primary}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.Secondary}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Settings Cards -->
                        <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Maximum Players" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0"/>
                                    <Border Background="{StaticResource Brush.Primary}" CornerRadius="8" Padding="12,6" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding MaxPlayers, StringFormat='{}{0} players'}" 
                                                   Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Poppins"/>
                                    </Border>
                                </Grid>
                                <Slider Minimum="2" Maximum="50" Value="{Binding MaxPlayers}" TickFrequency="1"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,15">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Time Per Round" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0"/>
                                    <Border Background="{StaticResource Brush.Secondary}" CornerRadius="8" Padding="12,6" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding TimePerRound, StringFormat='{}{0} sec'}" 
                                                   Foreground="White" FontWeight="Bold" FontSize="14" FontFamily="Poppins"/>
                                    </Border>
                                </Grid>
                                <Slider Minimum="5" Maximum="60" Value="{Binding TimePerRound}" TickFrequency="5"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardBorderStyle}">
                            <StackPanel>
                                <Grid Margin="0,0,0,12">
                                    <TextBlock Text="Auto-start Timer" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="0"/>
                                    <Border CornerRadius="8" Padding="12,6" HorizontalAlignment="Right">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource Brush.Accent2}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WaitTimeMinutes}" Value="0">
                                                        <Setter Property="Background" Value="#F21B1D23"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock x:Name="txtWaitTime">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding WaitTimeMinutes, StringFormat='{}{0} min'}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                    <Setter Property="FontFamily" Value="Poppins"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding WaitTimeMinutes}" Value="0">
                                                            <Setter Property="Text" Value="Manual Start"/>
                                                            <Setter Property="Foreground" Value="{StaticResource Brush.Accent2}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                                <Slider Minimum="0" Maximum="15" Value="{Binding WaitTimeMinutes}" TickFrequency="1"/>
                                <TextBlock Text="Set to 0 to disable auto-start" Foreground="#55FFFFFF" 
                                           FontSize="12" FontStyle="Italic" Margin="0,8,0,0" FontFamily="Inter V"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Buttons -->
                <Grid Grid.Row="2" Margin="0,25,0,0">
                    <Button Content="CREATE ROOM"
                            Command="{Binding ConfirmCreateRoomCommand}"
                            Height="56"
                            Background="{StaticResource Brush.Primary}" Foreground="White" 
                            FontWeight="Bold" FontSize="16" Cursor="Hand"
                            BorderThickness="0" FontFamily="Poppins">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="14">
                                    <Border.Effect>
                                        <DropShadowEffect Color="{StaticResource Color.Primary}" BlurRadius="20" Opacity="0.4" ShadowDepth="0"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="btnBorder" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="btnBorder" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.RenderTransformOrigin>
                            <Point X="0.5" Y="0.5"/>
                        </Button.RenderTransformOrigin>
                    </Button>
                </Grid>
            </Grid>

            <!-- Close Button -->
            <Button Content="✕" Command="{Binding CancelCommand}" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="25" 
                    Foreground="#44FFFFFF" Background="Transparent" BorderThickness="0" 
                    Cursor="Hand" FontSize="20" Width="35" Height="35">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
