<Page x:Class="EasyFlips.Views.EditProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFlips.Views"
        mc:Ignorable="d"
        d:DesignHeight="500" d:DesignWidth="400"
        Title="EditProfilePage">
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid Background="#3c3c3c">
        <StackPanel Margin="30" VerticalAlignment="Center" MaxWidth="400">
            <TextBlock Text="Edit Your Profile"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,30"
                       Foreground="White"/>
            <Grid HorizontalAlignment="Center" Margin="0,0,0,30">
                <Border Width="120" Height="120" 
                        CornerRadius="60" 
                        BorderBrush="#DDD" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Gray"/>
                    </Border.Effect>
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding AvatarURL, FallbackValue='pack://application:,,,/Images/default_user.png', TargetNullValue='pack://application:,,,/Images/default_user.png'}" 
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                <Button Command="{Binding ChangeAvatarCommand}"
                        Width="36" Height="36"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,0,0,5"
                        Background="#007BFF" BorderThickness="0"
                        ToolTip="Change Your Avatar">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="18"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="📷" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Button>
            </Grid>
            <StackPanel Margin="0,10">
                <TextBlock Text="User Name" Foreground="White" Margin="0,0,0,5"/>
                <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                         MaxLength="30"
                         Background="#434343" Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock Text="Email (Unable to Change)" Foreground="White" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email}" IsReadOnly="True" Background="#434343" Foreground="#888" ToolTip="Email dùng để đăng nhập, không thể thay đổi."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Width="100" Background="Red" Foreground="White" FontWeight="Bold" Cursor="Hand"/>

                <Button Content="Save Changes" 
                        Command="{Binding SaveProfileCommand}"
                        IsEnabled="{Binding CanSave}" 
                        Width="120" Background="#3498DB" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
            <ProgressBar IsIndeterminate="True" Height="4" Margin="0,20,0,0"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>
        </StackPanel>
    </Grid>
</Page>
