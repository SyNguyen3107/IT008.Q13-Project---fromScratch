<Window x:Class="IT008.Q13_Project___fromScratch.Views.AddCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:IT008.Q13_Project___fromScratch.Converters"
        mc:Ignorable="d"
        Title="Add Card" Height="650" Width="800" 
        Icon="/Resources/Anki-icon.ico"
        Background="#2c2c2c"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
        <!-- Style cho nút Xóa nhỏ gọn -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E74C3C"/>
            <!-- Màu đỏ -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="ToolTip" Value="Remove this file"/>
            <Setter Property="Content" Value="✕"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Deck -->
            <RowDefinition Height="*"/>
            <!-- Front -->
            <RowDefinition Height="*"/>
            <!-- Back -->
            <RowDefinition Height="Auto"/>
            <!-- Answer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->

        </Grid.RowDefinitions>

        <!-- 1. Hàng đầu: Type / Deck -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Type" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Border Grid.Column="1" CornerRadius="6" Background="#434343" Height="30" Margin="0,0,20,0">
                <Button Content="Basic" FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
            </Border>

            <TextBlock Grid.Column="2" Text="Deck" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Border Grid.Column="3" CornerRadius="6" Background="#434343" Height="30">
                <!-- Binding tên Deck -->
                <Button Content="{Binding SelectedDeck.Name, TargetNullValue='Select Deck...'}" 
                        FontSize="14" Foreground="White" Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Command="{Binding ChooseDeckCommand}"/>
            </Border>
        </Grid>

        <!-- 2. FRONT -->
        <GroupBox Grid.Row="1" Header="Front" Foreground="White" BorderBrush="#555" Margin="0,0,0,10">
            <!-- DockPanel giúp layout ổn định hơn Grid khi nội dung thay đổi -->
            <DockPanel Margin="5">

                <!-- Bottom: Media Preview & Buttons -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="0,5,0,0">

                    <!-- KHỐI HIỂN THỊ ẢNH FRONT (Gồm nút Xem và nút Xóa) -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5" 
                                Visibility="{Binding FrontImagePath, Converter={StaticResource NullToCollapsedConverter}}">
                        <Button Command="{Binding OpenFileLocationCommand}" CommandParameter="{Binding FrontImagePath}"
                                HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding FrontImagePath}" Height="50" Margin="0,0,10,0"/>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="📷" Foreground="#3498DB"/>
                                    <Run Text="{Binding FrontImageName}" Foreground="#3498DB" FontStyle="Italic" TextDecorations="Underline"/>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <!-- Nút Xóa -->
                        <Button Style="{StaticResource RemoveButtonStyle}" Command="{Binding RemoveFrontImageCommand}"/>
                    </StackPanel>

                    <!-- KHỐI HIỂN THỊ AUDIO FRONT -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
                                Visibility="{Binding FrontAudioPath, Converter={StaticResource NullToCollapsedConverter}}">
                        <Button Command="{Binding OpenFileLocationCommand}" CommandParameter="{Binding FrontAudioPath}"
                                HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔊" Foreground="#F1C40F" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding FrontAudioName}" Foreground="#F1C40F" FontStyle="Italic" TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                        <!-- Nút Xóa -->
                        <Button Style="{StaticResource RemoveButtonStyle}" Command="{Binding RemoveFrontAudioCommand}"/>
                    </StackPanel>

                    <!-- Toolbar Nút Bấm -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Image Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Image:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button ToolTip="Upload Image" Command="{Binding PickFrontImageCommand}" Content="📂" Background="#434343" Foreground="White" Width="30" Margin="0,0,2,0"/>
                            <Button ToolTip="Paste Image Link" Command="{Binding PasteLinkCommand}" CommandParameter="FrontImage" Content="📋" Background="#434343" Foreground="White" Width="30"/>
                        </StackPanel>

                        <!-- Audio Controls -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Audio:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button ToolTip="Upload Audio" Command="{Binding PickFrontAudioCommand}" Content="📂" Background="#434343" Foreground="White" Width="30" Margin="0,0,2,0"/>
                            <Button ToolTip="Paste Audio Link" Command="{Binding PasteLinkCommand}" CommandParameter="FrontAudio" Content="📋" Background="#434343" Foreground="White" Width="30"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <TextBox Text="{Binding FrontText, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         Background="#333" Foreground="White" BorderThickness="0"
                         FontSize="16" Padding="5" VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </GroupBox>

        <!-- 3. BACK  -->
        <GroupBox Grid.Row="2" Header="Back" Foreground="White" BorderBrush="#555" Margin="0,0,0,10">
            <DockPanel Margin="5">

                <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="0,5,0,0">

                    <!-- KHỐI HIỂN THỊ ẢNH BACK -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
                                Visibility="{Binding BackImagePath, Converter={StaticResource NullToCollapsedConverter}}">
                        <Button Command="{Binding OpenFileLocationCommand}" CommandParameter="{Binding BackImagePath}"
                                HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="{Binding BackImagePath}" Height="50" Margin="0,0,10,0"/>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="📷" Foreground="#3498DB"/>
                                    <Run Text="{Binding BackImageName}" Foreground="#3498DB" FontStyle="Italic" TextDecorations="Underline"/>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource RemoveButtonStyle}" Command="{Binding RemoveBackImageCommand}"/>
                    </StackPanel>

                    <!-- KHỐI HIỂN THỊ AUDIO BACK -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
                                Visibility="{Binding BackAudioPath, Converter={StaticResource NullToCollapsedConverter}}">
                        <Button Command="{Binding OpenFileLocationCommand}" CommandParameter="{Binding BackAudioPath}"
                                HorizontalAlignment="Left" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔊" Foreground="#F1C40F" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding BackAudioName}" Foreground="#F1C40F" FontStyle="Italic" TextDecorations="Underline"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource RemoveButtonStyle}" Command="{Binding RemoveBackAudioCommand}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Image Controls -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="Image:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button ToolTip="Upload Image" Command="{Binding PickBackImageCommand}" Content="📂" Background="#434343" Foreground="White" Width="30" Margin="0,0,2,0"/>
                            <Button ToolTip="Paste Image Link" Command="{Binding PasteLinkCommand}" CommandParameter="BackImage" Content="📋" Background="#434343" Foreground="White" Width="30"/>
                        </StackPanel>

                        <!-- Audio Controls -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Audio:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Button ToolTip="Upload Audio" Command="{Binding PickBackAudioCommand}" Content="📂" Background="#434343" Foreground="White" Width="30" Margin="0,0,2,0"/>
                            <Button ToolTip="Paste Audio Link" Command="{Binding PasteLinkCommand}" CommandParameter="BackAudio" Content="📋" Background="#434343" Foreground="White" Width="30"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <TextBox Text="{Binding BackText, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         Background="#333" Foreground="White" BorderThickness="0"
                         FontSize="16" Padding="5" VerticalScrollBarVisibility="Auto"/>
            </DockPanel>
        </GroupBox>
        <!-- 3. ANSWER -->
        <GroupBox Grid.Row="3" Header="Answer (Keyword for typing)" Foreground="#81C784" BorderBrush="#555" Margin="0,0,0,10">
            <TextBox Text="{Binding Answer, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     AcceptsReturn="False" 
                     VerticalContentAlignment="Center"
                     Background="#333" Foreground="White" BorderThickness="0"
                     FontSize="16" Padding="5"/>
        </GroupBox>
        <!-- 4. CÁC NÚT CHỨC NĂNG -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <!-- Nút Add -->
            <Border CornerRadius="6" Background="#434343" BorderThickness="1" Margin="5,0">
                <Button Content="Add" Command="{Binding SaveCardCommand}" Width="80" Height="25" 
                        Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand" IsDefault="True"/>
            </Border>

            <!-- Nút Close -->
            <Border CornerRadius="6" Background="#434343" BorderThickness="1" Margin="5,0">
                <Button Content="Close" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="80" Height="25" Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand" IsCancel="True"/>
            </Border>
        </StackPanel>

    </Grid>
</Window>