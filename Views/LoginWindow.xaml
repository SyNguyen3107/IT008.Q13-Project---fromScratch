<Window x:Class="EasyFlips.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:EasyFlips.Views"
        xmlns:services="clr-namespace:EasyFlips.Services"

        mc:Ignorable="d"
        Title="Login" Height="518" Width="354"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background ="#1E1E1E">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
            <!--Picture-->
            <Image Source="pack://application:,,,/Resources/lock.png" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <!-- Welcome -->
            <TextBlock Text="Welcome Back!" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Log in to your existing account" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,20"/>

            <!-- Email -->
            <TextBox x:Name="txtEmail" 
             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
             services:WatermarkService.Watermark="Enter email"
             services:WatermarkService.WatermarkSize="14"
             FontSize="14" Margin="0,5" Height="35" Background="#40444B" Foreground="White"
             VerticalContentAlignment="Center" />

            <Grid Margin="0,5" Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- TextBox hiển thị mật khẩu -->
                <TextBox x:Name="txtPasswordVisible"
               Grid.Column="0"
               FontSize="14"
               Text="{Binding Password, Mode=TwoWay}"    
               Background="#40444B" Foreground="White"
               VerticalContentAlignment="Center"
               Visibility="{Binding IsPasswordVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- PasswordBox ẩn mật khẩu -->
                <PasswordBox x:Name="txtPasswordHidden"
               Grid.Column="0"
               PasswordChanged="PasswordBox_PasswordChanged"
               services:WatermarkService.Watermark="Enter password"
               FontSize="14" 
               services:WatermarkService.WatermarkSize="14"
               Background="#40444B" Foreground="White"
                Visibility="{Binding IsPasswordVisible, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
               VerticalContentAlignment="Center"></PasswordBox>
          

                <!-- Nút con mắt -->
                <Button Grid.Column="1"
        Command="{Binding TogglePasswordVisibilityCommand}"
        IsEnabled="{Binding Password, Converter={StaticResource StringNotEmptyConverter}}"
        Width="35" Background="Transparent" Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <!-- mặc định mắt nhắm -->
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Image Source="pack://application:,,,/EasyFlips;component/Resources/hide.png"
                           Width="20" Height="20"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <!-- khi IsPasswordVisible = true thì đổi sang mắt mở -->
                                <DataTrigger Binding="{Binding IsPasswordVisible}" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Image Source="pack://application:,,,/EasyFlips;component/Resources/view.png"
                                   Width="20" Height="20"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>




            <!-- Remember Me Checkbox -->
            <CheckBox Content="Remember me" 
              IsChecked="{Binding IsRememberMe}"
              Foreground="White"
              Margin="0,0,5,0"
              HorizontalAlignment="Right"
              FontSize="12"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>

            <!-- Login Button -->
            <Button x:Name="btnLogin"
        Command="{Binding LoginCommand}"
        CommandParameter="{Binding ElementName=txtPassword}"
        Content="Login" FontSize="16" Margin="60,10,60,5" Height="35" FontWeight="Bold"
        Background="#3498DB" Foreground="White" Cursor="Hand"/>

            <!-- Guest Mode Button -->
            <Button x:Name="btnGuest"
        Command="{Binding GuestCommand}"
        Content="Continue as Guest" FontSize="15" Margin="60,5,60,15" Height="35" FontWeight="Bold"
        Background="#2ECC71" Foreground="White" Cursor="Hand"/>
            <!-- Register Link -->
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,10">
                <Hyperlink FontSize="14" Foreground="#00AFF0" 
                           Command="{Binding OpenRegisterCommand}">Register</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
