<Window x:Class="IT008.Q13_Project___fromScratch.Views.DeckChosenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Deck Statistics" Height="300" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <!-- Giao diện đơn giản hiển thị 3 chỉ số và nút Study Now -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="Thống kê bộ thẻ" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Các chỉ số -->
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch" >
            <!-- New -->
            <Border Padding="8" Margin="0,0,0,8" CornerRadius="6" Background="#FFF5F5F5">
                <DockPanel>
                    <TextBlock Text="New" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <TextBlock Text="{Binding NewCount}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                </DockPanel>
            </Border>

            <!-- Learning -->
            <Border Padding="8" Margin="0,0,0,8" CornerRadius="6" Background="#FFF5F5F5">
                <DockPanel>
                    <TextBlock Text="Learning" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <TextBlock Text="{Binding LearningCount}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                </DockPanel>
            </Border>

            <!-- Review -->
            <Border Padding="8" Margin="0,0,0,8" CornerRadius="6" Background="#FFF5F5F5">
                <DockPanel>
                    <TextBlock Text="Review" FontWeight="SemiBold" DockPanel.Dock="Left"/>
                    <TextBlock Text="{Binding ReviewCount}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                </DockPanel>
            </Border>
        </StackPanel>

        <!-- Nút Study Now -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <!-- Nút gọi lệnh StudyNowCommand trên ViewModel -->
            <Button Content="Study Now"
                    Width="120"
                    Height="36"
                    Command="{Binding StudyNowCommand}"/>
        </StackPanel>
    </Grid>
</Window>
