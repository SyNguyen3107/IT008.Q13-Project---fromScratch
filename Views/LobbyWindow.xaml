<Window x:Class="EasyFlips.Views.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasyFlips.ViewModels"
        mc:Ignorable="d"
        Title="EasyFlips Lobby" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Foreground="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#141E30" Offset="0.0"/>
            <GradientStop Color="#243B55" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="GlassCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.3" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#25FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#4CD137"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" Color="#4CD137" Opacity="0.6" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="25" Background="{TemplateBinding Background}" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
           
            <TextBlock Text="ROOM CODE" Foreground="#7F8FA6" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <Border Background="#20000000" CornerRadius="20" BorderBrush="#20FFFFFF" BorderThickness="1" Padding="60,15">
                <TextBlock Text="{Binding RoomId, TargetNullValue='LOADING'}" 
                           FontSize="56" FontWeight="Black" Foreground="White"
                           HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" BlurRadius="15" Opacity="0.6" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>



            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">

                <Border Background="#30000000" CornerRadius="15" Margin="0,20,0,0" Padding="20,8">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="#4CD137" Margin="0,0,8,0"/>
                        <TextBlock Text="ONLINE: " Foreground="#BDC3C7" FontWeight="Bold" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Players.Count}" Foreground="White" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding MaxPlayersString}" Foreground="#7F8FA6" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#30000000" CornerRadius="15" Margin="15,20,0,0" Padding="20,8"
                        Visibility="{Binding IsAutoStartActive, Converter={StaticResource BoolToVis}}">

                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding AutoStartStatus}" 
                                   Foreground="#F59E0B" FontWeight="Bold" FontSize="12"
                                   HorizontalAlignment="Center" Margin="0,0,0,5"/>

                        <ProgressBar Grid.Row="1"
                                     Value="{Binding AutoStartSeconds}" Maximum="{Binding TotalWaitTime}"
                                     Width="150" Height="6"
                                     BorderThickness="0" Background="#334155" Foreground="#F59E0B">
                            <ProgressBar.Resources>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Grid x:Name="TemplateRoot">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                                                    <Border x:Name="PART_Track"/>
                                                    <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" CornerRadius="3" HorizontalAlignment="Left"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Resources>
                        </ProgressBar>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="20,10" VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Players}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="140" Height="180" Margin="15" Style="{StaticResource GlassCardStyle}"
                                RenderTransformOrigin="0.5,0.5">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.3" To="1" Duration="0:0:0.6">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.3" To="1" Duration="0:0:0.6">
                                                <DoubleAnimation.EasingFunction>
                                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <Grid>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Grid Margin="0,0,0,15">
                                        <Ellipse Width="84" Height="84" Stroke="#40FFFFFF" StrokeThickness="4"/>
                                        <Ellipse Width="80" Height="80">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarUrl, TargetNullValue='https://i.imgur.com/KkrzQ83.png'}" 
                                                            Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>

                                    <TextBlock Text="{Binding Name}" Foreground="White" 
                                               HorizontalAlignment="Center" TextAlignment="Center"
                                               TextTrimming="CharacterEllipsis" MaxWidth="120"
                                               FontSize="16" FontWeight="Bold"/>
                                </StackPanel>

                                <Border Background="#FFD700" CornerRadius="0,15,0,10" HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="👑" FontSize="16" Margin="8,4"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Command="{Binding LeaveRoomCommand}" Content="LEAVE"
                Width="140" Height="50"
                Style="{StaticResource ModernButtonStyle}"
                        Margin="0,0,10,0"
                FontSize="16" FontWeight="Bold" Foreground="White"
                Visibility="{Binding IsStudent, Converter={StaticResource BoolToVis}}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#34495e" Offset="0"/>
                            <GradientStop Color="#2c3e50" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button Command="{Binding CloseRoomCommand}" Content="CLOSE ROOM"
                Width="160" Height="50"
                Style="{StaticResource ModernButtonStyle}"
                FontSize="16" FontWeight="Bold" Foreground="White"
                Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#EB3349" Offset="0"/>
                            <GradientStop Color="#F45C43" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" 
                Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}">

                <Button Command="{Binding OpenSettingsCommand}" Content="⚙️ SETTINGS"
                Margin="0,0,20,0"
                Style="{StaticResource IconButtonStyle}"
                Foreground="White" FontWeight="SemiBold"/>

                
                <Button Command="{Binding StartGameCommand}" Content="START GAME"
                Width="180" Height="50"
                Style="{StaticResource ModernButtonStyle}"
                        Margin="20, 0, 0, 0"
                FontSize="18" FontWeight="ExtraBold" Foreground="White">
                    <Button.Effect>
                        <DropShadowEffect Color="#38ef7d" BlurRadius="15" Opacity="0.4" ShadowDepth="0"/>
                    </Button.Effect>
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#11998e" Offset="0"/>
                            <GradientStop Color="#38ef7d" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>