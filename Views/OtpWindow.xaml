<Window x:Class="EasyFlips.Views.OtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verification Code"
        Height="320" Width="300"  
    WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource Brush.Dark}">

    <Grid>
        <!-- Nút X ở góc trên bên phải -->
        <Button Content="x"
                ToolTip="Close and go back"
                FontSize="20"
                Width="24" 
                Height="24" 
                FontWeight="Bold" 
                Foreground="White" 
                Background="Transparent" 
                BorderThickness="0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,5,10,0"
                Command="{Binding CancelCommand}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Image Source="pack://application:,,,/Resources/password.png"
                   ToolTip="Check your email inbox!"
                   Width="100" Height="100"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

            <TextBlock Text="Verification Code"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="{StaticResource Brush.TextPrimary}" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="0,0,0,10"
                ToolTipService.InitialShowDelay="200"
                    ToolTip="Enter the 8-digit code we sent you">
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp1, UpdateSourceTrigger=PropertyChanged}"
             TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp2, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp3, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp4, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp5, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp6, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp7, UpdateSourceTrigger=PropertyChanged}"
                          TextChanged="OtpBox_TextChanged"/>
                <TextBox Width="30" Height="30" MaxLength="1" Margin="2"
             FontSize="16" TextAlignment="Center"
             Background="White" Foreground="{StaticResource Brush.Dark}"
             BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2"
             Text="{Binding Otp8, UpdateSourceTrigger=PropertyChanged}"
             TextChanged="OtpBox_TextChanged"/>
            </StackPanel>


            <Button Content="CONFIRM" Width="120" Height="32" FontWeight="Bold" Cursor="Hand" Margin="0,20,0,0" Command="{Binding VerifyOtpCommand}">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent1}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6C5DD3"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0049C6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
