<Window x:Class="EasyFlips.Views.OtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xác thực OTP"
        Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Grid>
        <!-- Ảnh nền -->
        <Image Source="pack://application:,,,/Resources/SL-022722-48830-19.jpg"
               Stretch="UniformToFill">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>

        <!-- Nút Close ở góc trên bên phải -->
        <Button Content="✖"
                Width="30" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Background="Transparent"
                Foreground="Black"
                BorderThickness="0"
                Cursor="Hand"
                Command="{Binding CancelCommand}"></Button>

        <!-- Khung trắng đục ở giữa -->
        <Border Background="#CCFFFFFF"
                CornerRadius="10"
                Padding="20"
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <!-- Nội dung OTP -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                <!-- Ảnh nằm trên cùng -->
                <Image Source="pack://application:,,,/Resources/password.png"
                       Width="60" Height="60"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

                <!-- Tiêu đề -->
                <TextBlock Text="Nhập mã OTP từ email:"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#34495E"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <!-- Ô nhập OTP -->
                <TextBox Width="250"
                         Height="35"
                         Padding="5"
                         FontSize="14"
                         HorizontalAlignment="Center"
                         BorderBrush="#3498DB"
                         BorderThickness="2"
                         Background="White"
                         Text="{Binding OtpCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Nút xác thực bo tròn, viền hồng -->
                <Button Content="Xác thực"
                        Width="150"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Foreground="#FFF55A8F"
                        FontWeight="Bold"
                        BorderBrush="#FFF878A4"
                        BorderThickness="2"
                        Cursor="Hand"
                        Command="{Binding VerifyOtpCommand}"
                        Background="#FFFCD9F1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
