<Window x:Class="EasyFlips.Views.SyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasyFlips.ViewModels"
        mc:Ignorable="d"
        Title="Data Synchronization" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#181A20"/>
        <SolidColorBrush x:Key="SurfaceDark" Color="#1F222A"/>
        <SolidColorBrush x:Key="CardBg" Color="#2B2E38"/>
        <SolidColorBrush x:Key="TextGrey" Color="#9E9EA7"/>

        <SolidColorBrush x:Key="UploadGreen" Color="#2ECC71"/>
        <SolidColorBrush x:Key="DownloadBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="UpdateOrange" Color="#E67E22"/>
        <SolidColorBrush x:Key="UpdatePurple" Color="#9B59B6"/>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#6949ff"/>

        <Style x:Key="DarkScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="#444" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bdr" Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="#2B2E38"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="#444" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#353945"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" SnapsToDevicePixels="true">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="DeckTemplate">
            <Border Background="{StaticResource CardBg}" Margin="0,0,0,8" Padding="12" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{StaticResource TextGrey}" 
                                   TextTrimming="CharacterEllipsis" MaxHeight="30" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#1F222A" CornerRadius="5" Padding="8,2" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="{Binding Cards.Count, StringFormat='{}{0} cards'}" 
                                   VerticalAlignment="Center" FontSize="11" Foreground="#888"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="{StaticResource BgDark}" CornerRadius="20" BorderBrush="#333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🔄" Foreground="#ffc107" FontSize="22" Margin="0,0,10,0"/>
                    <TextBlock Text="DATA SYNCHRONIZATION" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        HorizontalAlignment="Right" Content="✕" Background="Transparent" BorderThickness="0" 
                        Foreground="#666" FontSize="16" Cursor="Hand"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SurfaceDark}" CornerRadius="12" Padding="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="⬆" Foreground="{StaticResource UploadGreen}" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Upload to Cloud" Foreground="{StaticResource UploadGreen}" FontWeight="Bold"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                            </ScrollViewer.Resources>
                            <ListBox ItemsSource="{Binding Plan.ToUpload}" ItemTemplate="{StaticResource DeckTemplate}" 
                                     BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource SurfaceDark}" CornerRadius="12" Padding="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="⬇" Foreground="{StaticResource DownloadBlue}" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Download to Device" Foreground="{StaticResource DownloadBlue}" FontWeight="Bold"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                            </ScrollViewer.Resources>
                            <ListBox ItemsSource="{Binding Plan.ToDownload}" ItemTemplate="{StaticResource DeckTemplate}" 
                                     BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource SurfaceDark}" CornerRadius="12" Padding="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="☁" Foreground="{StaticResource UpdateOrange}" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Update Cloud (Local is newer)" Foreground="{StaticResource UpdateOrange}" FontWeight="Bold"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                            </ScrollViewer.Resources>
                            <ListBox ItemsSource="{Binding Plan.ToUpdateCloud}" ItemTemplate="{StaticResource DeckTemplate}" 
                                     BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="2" Background="{StaticResource SurfaceDark}" CornerRadius="12" Padding="10">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="💻" Foreground="{StaticResource UpdatePurple}" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Update Local (Cloud is newer)" Foreground="{StaticResource UpdatePurple}" FontWeight="Bold"/>
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                            </ScrollViewer.Resources>
                            <ListBox ItemsSource="{Binding Plan.ToUpdateLocal}" ItemTemplate="{StaticResource DeckTemplate}" 
                                     BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" Margin="0,15,0,5">
                <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center" 
                           FontSize="14" Foreground="#CCC" TextWrapping="Wrap" Margin="0,0,0,5"/>

                <ProgressBar Height="4" BorderThickness="0" Background="#333" Foreground="{StaticResource PrimaryPurple}"
                             IsIndeterminate="True" 
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">

                <Button Command="{Binding CheckSyncCommand}" Content="CHECK AGAIN" 
                        Width="140" Height="45" Margin="0,0,15,0"
                        Style="{StaticResource SecondaryBtnStyle}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>

                <Button Command="{Binding ExecuteSyncCommand}" Content="SYNC NOW" 
                        Width="160" Height="45"
                        IsEnabled="{Binding CanSync}"
                        Style="{StaticResource PrimaryBtnStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>