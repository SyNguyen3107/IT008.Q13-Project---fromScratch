<Window x:Class="EasyFlips.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFlips"
        xmlns:vm="clr-namespace:EasyFlips.ViewModels"
        mc:Ignorable="d"
        Title="EasyFlips" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#181A20"
        Loaded="MainWindowLoaded">
    <!-- Resources -->
    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#181a20"/>
        <SolidColorBrush x:Key="SurfaceDark" Color="#1F222A"/>
        <SolidColorBrush x:Key="CardBg" Color="#2B2E38"/>
        <SolidColorBrush x:Key="PrimaryPurple" Color="#6C5DD3"/>
        <SolidColorBrush x:Key="TextGrey" Color="#9E9EA7"/>
        <SolidColorBrush x:Key="ActionPurple" Color="#6949ff"/>
        <LinearGradientBrush x:Key="NeonPurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8E2DE2" Offset="0"/>
            <GradientStop Color="#4A00E0" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="SidebarBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextGrey}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0,0,3,0">
                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#2B2E38"/>
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ActionPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#3CAACF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="#181A20"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="#444" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseDown="ClearSelection_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SurfaceDark}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,50,0,40" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center">
                        <Ellipse Width="90" Height="90" Stroke="{StaticResource PrimaryPurple}" StrokeThickness="2">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#6C5DD3" BlurRadius="15" Opacity="0.4"/>
                            </Ellipse.Effect>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding UserSession.AvatarBitmap, TargetNullValue='pack://application:,,,/Images/default_user.png'}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Button Width="30" Height="30" Click="OpenEditProfile_Click"
                                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-5,0"
                                Background="{StaticResource PrimaryPurple}" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="{StaticResource SurfaceDark}" BorderThickness="3">
                                        <TextBlock Text="✎" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <TextBlock Text="{Binding UserSession.UserName, TargetNullValue='Guest User'}" 
                               Foreground="White" FontWeight="Bold" FontSize="20" 
                               HorizontalAlignment="Center" Margin="0,15,0,5"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse Width="8" Height="8" Fill="{Binding IsConnected, Converter={StaticResource BoolToBrushConverter}}"/>
                        <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToTextConverter}}" 
                                   Foreground="{StaticResource TextGrey}" FontSize="12" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button Command="{Binding SyncCommand}" Style="{StaticResource SidebarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Margin="0,0,15,0"/>
                            <TextBlock Text="Sync Data"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,30">
                    <Separator Background="#2B2E38" Margin="20,10"/>

                    <Button Command="{Binding LogoutCommand}" Style="{StaticResource SidebarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⬅" Margin="0,0,15,0"/>
                            <TextBlock Text="Log out"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding CloseCurrentWindowCommand}" Style="{StaticResource SidebarBtnStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❌" Margin="0,0,15,0"/>
                            <TextBlock Text="Exit"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="160" CornerRadius="20" Margin="0,0,0,30" Background="{StaticResource NeonPurpleGradient}">
                <Border.Effect>
                    <DropShadowEffect Color="#6C5DD3" BlurRadius="25" Opacity="0.3" ShadowDepth="8"/>
                </Border.Effect>
                <Grid ClipToBounds="True">
                    <Ellipse Width="150" Height="150" Fill="White" Opacity="0.1" Margin="0,-50,-30,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <Ellipse Width="80" Height="80" Fill="White" Opacity="0.1" Margin="0,0,100,-20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                    <Grid Margin="40,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Join a Lobby" FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Enter code to connect with your friends instantly." FontSize="14" Foreground="#E0E7FF" Opacity="0.8" Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" Content="JOIN NOW" Command="{Binding JoinLobbyCommand}"
                                Width="130" Height="45" FontSize="13" FontWeight="Bold" Foreground="#6C5DD3" Background="White" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="btn" Background="White" CornerRadius="22">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="btn" Property="Background" Value="#F0F0F0"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Your Decks" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Content="↻ Refresh" Command="{Binding ReloadDecksCommand}" 
                            Background="Transparent" Foreground="{StaticResource PrimaryPurple}" BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Decks.Count, StringFormat='Total: {0}'}" Foreground="{StaticResource TextGrey}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Background="Transparent">
                <ListView x:Name="DeckListView" 
                          ItemsSource="{Binding Decks}" 
                          SelectionChanged="ListView_SelectionChanged" 
                          Background="Transparent" 
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListView.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource DarkScrollBarStyle}"/>
                    </ListView.Resources>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,0,15,15"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="220" Height="140" Background="{StaticResource CardBg}" CornerRadius="18" Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                                </Border.Effect>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="15">
                                        <TextBlock Text="🎴" FontSize="40" Opacity="0.05" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" FontWeight="SemiBold" 
                                                   TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>

                                        <Button Content="⚙" HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Foreground="{StaticResource TextGrey}" Background="Transparent" BorderThickness="0"
                                                Click="GearButton_Click" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Rename" Command="{Binding PlacementTarget.Tag.RenameDeckCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    <MenuItem Header="Options" Command="{Binding PlacementTarget.Tag.DeckOptionsCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    <MenuItem Header="Export" Command="{Binding PlacementTarget.Tag.ExportDeckCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                    <Separator/>
                                                    <MenuItem Header="Delete" Command="{Binding PlacementTarget.Tag.DeleteDeckCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Foreground="Red"/>
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </Grid>

                                    <Border Grid.Row="1" Background="#23262F" CornerRadius="0,0,18,18" Height="40" Padding="15,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding NewCount}" Foreground="#3498DB" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" New" Foreground="#3498DB" FontSize="10" Margin="0,2,8,0"/>
                                            <TextBlock Text="{Binding LearnCount}" Foreground="#E74C3C" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" Lrn" Foreground="#E74C3C" FontSize="10" Margin="0,2,8,0"/>
                                            <TextBlock Text="{Binding DueCount}" Foreground="#2ECC71" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" Due" Foreground="#2ECC71" FontSize="10" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding CreateDeckCommand}" Style="{StaticResource ActionButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#ffc107" CornerRadius="20" Width="30" Height="30" Margin="0,0,10,0">
                            <TextBlock Text="+" Foreground="{StaticResource ActionPurple}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Create Deck" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Command="{Binding AddCardCommand}" Style="{StaticResource ActionButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#ffc107" CornerRadius="20" Width="30" Height="30" Margin="0,0,10,0">
                            <TextBlock Text="✎" Foreground="{StaticResource ActionPurple}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Add Card" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" Command="{Binding ImportFileCommand}" Style="{StaticResource ActionButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#ffc107" CornerRadius="20" Width="30" Height="30" Margin="0,0,10,0">
                            <TextBlock Text="📂" Foreground="{StaticResource ActionPurple}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Import File" FontWeight="Bold" FontSize="20"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <Frame x:Name="MainFrame" 
               Grid.Column="0" Grid.ColumnSpan="2" 
               NavigationUIVisibility="Hidden"
               Visibility="Hidden"
               Background="#181A20" 
               Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>